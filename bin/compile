#!/bin/sh

for BUILDPACK in $(cat $1/.buildpacks); do
  dir=$(mktemp -t foo)
  rm -rf $dir

  url=${BUILDPACK%#*}
  branch=${BUILDPACK#*#}

  if [ "$branch" == "$url" ]; then
    branch=""
  fi

  if [ "$url" != "" ]; then
    git clone $url $dir
    cd $dir

    if [ "$branch" != "" ]; then
      git checkout $branch
    fi

    chmod +x $dir/bin/{detect,compile,release}

    framework=$($dir/bin/detect $1)

    if [ $? == 0 ]; then
      echo "Detected Framework: $framework"
      $dir/bin/compile $1

      if [ $? != 0 ]; then
        exit 1
      fi
    fi
  fi
done
